<?xml version='1.0' encoding='utf-8'?>
<widget id="org.blocus.chatroom" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="Chatroom">Blocus Chatroom</name>
    <description>Opensource Android client for the Blocus Chatroom web application</description>
    <author email="blocus-org@proton.me" href="https://github.com/blocus-org">
        Blocus.org
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <icon src="res/android/mipmap-mdpi/icon.png" density="mdpi" />
        <icon src="res/android/mipmap-hdpi/icon.png" density="hdpi" />
        <icon src="res/android/mipmap-xhdpi/icon.png" density="xhdpi" />
        <icon src="res/android/mipmap-xxhdpi/icon.png" density="xxhdpi" />
        <icon src="res/android/mipmap-xxxhdpi/icon.png" density="xxxhdpi" />
    </platform>
</widget>
